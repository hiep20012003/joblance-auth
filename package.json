{
  "name": "auth-service",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "dotenv -e .env.prod -- pm2 start ./build/src/app.js -i 5 --attach --watch",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all",
    "dev": "dotenv -e .env.dev -- nodemon -r tsconfig-paths/register src/app.ts",
    "lint:check": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier:check": "prettier --check 'src/**/*.{ts,json}'",
    "prettier:fix": "prettier --write 'src/**/*.{ts,json}'",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "test": "jest --coverage --maxWorkers=1 --forceExit --detectOpenHandles --watchAll=false",
    "migration:create": "dotenv -- node scripts/migrate create --folder src/db/migrations",
    "migrate": "dotenv -- node src/scripts/migrate up",
    "migrate:undo": "dotenv -- node src/scripts/migrate down",
    "migrate:pending": "dotenv -- node src/scripts/migrate pending"
  },
  "dependencies": {
    "amqplib": "^0.10.8",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "tslib": "^2.8.1",
    "umzug": "^3.8.2",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10"
  }
}
